<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center_vertical|left"
        android:background="@drawable/global_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/left_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="13dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="normal"
		android:visibility="gone" />

    <TextView
        android:id="@+id/center_title_loan_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/center_title_loan_imageview"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:src="@drawable/pahome_center_logo"
        android:layout_gravity="center"
		android:scaleType="fitCenter"
		android:visibility="gone"
        android:gravity="center_horizontal"

         />

    <TextView
        android:id="@+id/right_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="normal" 
		android:visibility="gone" />

    <ImageButton
        android:id="@+id/right_header_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/global_face"
        android:visibility="gone" />

</FrameLayout>